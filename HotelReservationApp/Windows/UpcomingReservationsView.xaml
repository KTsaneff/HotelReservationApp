<UserControl x:Class="HotelReservationApp.Windows.UpcomingReservationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HotelReservationApp.Windows">
    <Grid Margin="20">
        <StackPanel>

            <!-- Top Bar: Button (left aligned with style) + Centered Title -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Styled button (uses style from App.xaml) -->
                <Button Content="🏨 Back to Hotel"
                        Click="BackToHome_Click"
                        Style="{StaticResource RoundedButtonStyle}"
                        Width="160"
                        Height="45"
                        Margin="0,0,20,0"
                        VerticalAlignment="Center"
                        Grid.Column="0"/>

                <!-- Centered title -->
                <TextBlock Text="📅 Upcoming Reservations"
                           FontSize="24"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Grid.Column="1"/>
            </Grid>

            <!-- Reservation Card 1 -->
            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10" CornerRadius="5">
                <StackPanel>

                    <!-- Check-in and Check-out -->
                    <TextBlock>
            <Run Text="Check-in: 2025-05-01" FontWeight="Bold"/>
            <Run Text=" | Check-out: 2025-05-05" />
            <Run Text=" (4 nights)" FontStyle="Italic" Foreground="Gray"/>
                    </TextBlock>

                    <!-- Guest and guest count -->
                    <TextBlock>
            <Run Text="Guest: " />
            <Run Text="John Doe" FontWeight="Bold" />
            <Run Text=" | Adults: 2, Children: 1" />
                    </TextBlock>

                    <!-- Phone (bolded) -->
                    <TextBlock>
            <Run Text="Phone: " />
            <Run Text="+359 88 123 4567" FontWeight="Bold" />
                    </TextBlock>

                    <!-- Booking date and Room number on same line -->
                    <TextBlock>
            <Run Text="Booked on: 2025-04-15" />
            <Run Text=" | Room: 101" />
                    </TextBlock>

                    <Button Content="Details" Margin="0,10,0,0" Width="100"
                HorizontalAlignment="Left"
                Click="DetailsButton_Click"/>
                </StackPanel>
            </Border>

            <!-- Reservation Card 2 -->
            <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10" CornerRadius="5">
                <StackPanel>

                    <!-- Check-in and Check-out -->
                    <TextBlock>
            <Run Text="Check-in: 2025-05-01" FontWeight="Bold"/>
            <Run Text=" | Check-out: 2025-05-05" />
            <Run Text=" (4 nights)" FontStyle="Italic" Foreground="Gray"/>
                    </TextBlock>

                    <!-- Guest and guest count -->
                    <TextBlock>
            <Run Text="Guest: " />
            <Run Text="John Doe" FontWeight="Bold" />
            <Run Text=" | Adults: 2, Children: 1" />
                    </TextBlock>

                    <!-- Phone (bolded) -->
                    <TextBlock>
            <Run Text="Phone: " />
            <Run Text="+359 88 123 4567" FontWeight="Bold" />
                    </TextBlock>

                    <!-- Booking date and Room number on same line -->
                    <TextBlock>
            <Run Text="Booked on: 2025-04-15" />
            <Run Text=" | Room: 101" />
                    </TextBlock>

                    <Button Content="Details" Margin="0,10,0,0" Width="100"
                HorizontalAlignment="Left"
                Click="DetailsButton_Click"/>
                </StackPanel>
            </Border>


        </StackPanel>
    </Grid>
</UserControl>
